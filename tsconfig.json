{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "noEmit": true,
        "rootDir": "..",
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "noUnusedLocals": false,
        "noUnusedParameters": false
    },
    "include": ["src/**/*", "bin/**/*"],
    "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
