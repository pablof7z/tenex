{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "rootDir": ".",
        "outDir": "./dist",
        "noUnusedLocals": false,
        "noUnusedParameters": false
    },
    "include": ["src/**/*", "bin/**/*"],
    "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
